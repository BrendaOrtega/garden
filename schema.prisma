datasource db {
    provider = "mongodb"
    url      = env("DB")
}

generator client {
    provider = "prisma-client-js"
    binaryTargets = ["rhel-openssl-3.0.x"]
}

model Post {
    id         String   @id @default(auto()) @map("_id") @db.ObjectId
    createdAt  DateTime @default(now())
    title      String   @unique
    coverImage String?
    body       String
    authorName String
    photoUrl   String?
    authorAt   String
    slug       String   @unique
}
